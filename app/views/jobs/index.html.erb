<div class="dropdown pull-right">
  <button class="dropdown btn btn-sm btn-default" data-toggle="dropdown">
    <span href="#"> Filter by
      <b class="caret"></b>
    </span>
  </button>
    <ul class="dropdown-menu">
      <li> <%= link_to("By lower bound", jobs_path(:order => "by_lower_bound")) %> </li>
      <li> <%= link_to("By upper bound", jobs_path(:order => "by_upper_bound")) %> </li>
      <li> <%= link_to("Latest publish", jobs_path) %></li>
    </ul>

</div>

<table class="table table-hover">
  <thead>
      <tr>
          <th> # </th>
          <th> Title </th>
          <th> Wage Lower Bound </th>
          <th> Wage Upper Bound </th>
          <th> Last Update </th>
      </tr>
  </thead>

  <tbody>
      <% @jobs.each do |job| %>
        <tr>
            <td> <%= job.id %> </td>
            <td>
              <%= link_to(job.title, job_path(job)) %>
            </td>
            <td> <%= job.wage_lower_bound %> </td>
            <td> <%= job.wage_upper_bound %> </td>
            <td> <%= job.created_at %> </td>
        </tr>
      <% end %>
  </tbody>
</table>
