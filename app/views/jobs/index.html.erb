<div class="job">
  <%= link_to "Add a job", new_job_path, class:"btn btn-default pull-right" %>
</div>

<table class="table table-hover">
  <thead>
      <tr>
          <th> # </th>
          <th> Title </th>
          <th> Descripton </th>
          <th> Last Update </th>
      </tr>
  </thead>

  <tbody>
      <% @jobs.each do |job| %>
        <tr>
            <td> <%= job.id %> </td>
            <td> <%= link_to job.title %></td>
            <td> <%= simple_format(job.description) %> </td>
            <td> <%= job.created_at %> </td>
        </tr>
      <% end %>
  </tbody>
</table>
